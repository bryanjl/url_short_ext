{
    "name": "URL Shortener",
    "description": "A Chrome extension to quickly shorten a URL",
    "version": "0.1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "./src/html/popup.html"
    },
    "options_page": "./src/html/options.html",
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "./img/url_short_icons/url_16.png",
        "48": "./img/url_short_icons/url_48.png",
        "128": "./img/url_short_icons/url_128.png"
    }
}