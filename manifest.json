{
    "name": "URL Shortener",
    "description": "A Chrome extension to quickly shorten a URL",
    "version": "0.1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "./src/html/popup.html"
    },
    "options_page": "",
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}